doctype html

html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title Uncle Mike Variable Font Module
    link(rel="shortcut icon" type="image/png" href="")  
    link(rel="apple-touch-icon" href="")
    link(rel="stylesheet" href="static/css/bulma.css")
    link(rel="stylesheet" href="static/css/base.css")
    
  body
    #wrapper
      .section
        .container#form-container
          .columns
            .column
              form
                .field.is-horizontal
                  .field-body.has-pad-right-tablet
                    .field
                      .control.is-expanded
                        .select.is-fullwidth
                          select.select-field
                            option(value="regular") Regular
                            option(value="demibold") Demi Bold
                  .field-label.is-flex.has-align-center.has-justified-right
                    label.label Size
                  .field-body
                    .field
                      .control.is-width-60
                        input.input(type="range" min="100" max="900" value="350" class="slider" id="myRange")
                  .field-label.is-flex.has-align-center.has-justified-right
                    label.label Stylistic&nbsp;Sets
                  .field-body
                    .field.is-grouped
                      .control.is-flex.has-align-center
                        a A
                      .control.is-flex.has-align-center
                        a B
                      .control.is-flex.has-align-center
                        a C
                  .field-label.is-flex.has-align-center
                    label.label Variable
                  .field-body.has-flex-grow-unset
                    .field
                      label.switch
                        input(type="checkbox")
                        span.toggle.round
                .field
                  #text-area(contenteditable)
                    p The Quick Brown Fox Jumped Over the Lazy Brown Dog (Type Here)...
    script(src="static/js/base_ui.js")
