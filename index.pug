doctype html

html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title Uncle Mike Variable Font Module
    link(rel="shortcut icon" type="image/png" href="")  
    link(rel="apple-touch-icon" href="")
    link(rel="stylesheet" href="static/css/bulma.css")
    link(rel="stylesheet" href="static/css/base.css")
    
  body
    #fixed-controls
      .section#font-controls.is-bottom-paddingless
        .container
          .columns
            .column
              #font-selection
                ul
                  li: a(href="#") Animal
              form
                .field.is-horizontal
                  .field-body.has-pad-right-tablet
                    .field
                      .control.is-expanded
                        .select.is-fullwidth
                          select#select-style.select-field
                            option(value="Animal-reg") Regular
                            option(value="Animal-demi") Demi Bold
                  .field-label.is-flex.has-align-center.has-justified-right
                    label.label.is-hidden-touch Size
                  .columns.is-hidden-tablet
                    .column
                  .field-body
                    .field.is-flex.has-align-center
                      .control.is-width-60-desktop.is-width-80-tablet.is-flex.has-align-center
                        input#range-size.input.slider.is-paddingless(type="range" min="10" max="50")
                  .columns.is-hidden-tablet
                    .column
                  .field-label.is-flex.has-align-center.has-justified-right
                    label.label Stylistic&nbsp;Sets
                  .field-body
                    .field.is-grouped
                      .control.is-flex.has-align-center
                        a.is-disabled A
                      .control.is-flex.has-align-center
                        a.is-disabled B
                      .control.is-flex.has-align-center
                        a.is-disabled C
                  .field-label.is-flex.has-align-center
                    label.label Variable
                  .field-body.has-flex-grow-unset
                    .field
                      label.switch
                        input(type="checkbox")
                        span.toggle.round
                .columns.is-multiline
                  .column.is-full
                  .column.is-full
    #font-display.section.is-top-paddingless.is-bottom-paddingless
      .container
        .columns
          .column.is-bottom-paddingless
            #text-area(contenteditable)
              p The Quick Brown Fox Jumped Over the Lazy Brown Dog (Type Here)...
    script(src="static/js/fonts.js")
    script(src="static/js/base_ui.js")
