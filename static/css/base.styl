highlightColor = #F6A920

@font-face{
  font-family: 'Aretha Variable';
  font-weight: 100 900;
  font-style: normal;
  font-stretch: normal;
  src: url('../VAR/ArethaGX.ttf') format('truetype-variations');
}

@font-face{
  font-family: 'Animal-reg';
  src: url('../fonts/UM_Animal-Regular.otf');
}

@font-face{
  font-family: 'Animal-demi';
  src: url('../fonts/UM_Animal-DemiBold.otf');
}

* { background-color: rgba(255,0,0,.2); }
* * { background-color: rgba(0,255,0,.2); }
* * * { background-color: rgba(0,0,255,.2); }
* * * * { background-color: rgba(255,0,255,.2); }
* * * * * { background-color: rgba(0,255,255,.2); }
* * * * * * { background-color: rgba(255,255,0,.2); }
* * * * * * * { background-color: rgba(255,0,0,.2); }
* * * * * * * * { background-color: rgba(0,255,0,.2); }
* * * * * * * * * { background-color: rgba(0,0,255,.2); }

body
  font-family:"sans-serif"
  font-size:1.2em

a
  color: highlightColor
  &:visited
    color: highlightColor
  &.is-disabled
    color:black
    opacity: 0.25
    pointer-events: none

form *
  font-family:"Animal-reg"

input[type="range"]
  height:1px
  &.input
    &:active
      noBorder()
    &:focus
      noBorder()

noBorder()
  box-shadow:none
  border-color:#dbdbdb
  outline:none

.label
  font-weight:400

.switch
  position: relative
  display: inline-block
  width: 60px
  height: 34px
  input
    opacity: 0
    width: 0
    height: 0
    &:checked + .toggle
      background-color: highlightColor
    &:checked + .toggle:before
      -webkit-transform: translateX(26px)
      -ms-transform: translateX(26px)
      transform: translateX(26px)
    &:focus + .toggle
      box-shadow: 0 0 1px highlightColor

.toggle
  position: absolute
  cursor: pointer
  top: 0
  left: 0
  right: 0
  bottom: 0
  background-color: #ccc
  -webkit-transition: .4s
  transition: .4s
  &:before
    position: absolute
    content: ""
    height: 26px
    width: 26px
    left: 4px
    bottom: 4px
    background-color: white
    -webkit-transition: .4s
    transition: .4s

.toggle.round
  border-radius: 34px
  &:before
    border-radius: 50%

#font-selection
  ul
    li
      display:inline

div.is-fixed-top
  position:fixed
  width:100%
  top:0
  z-index:1
  background-color:white

#font-display
  margin-top:288px
@media screen and (min-width:769px)
  #font-display
    margin-top:132px

#text-area
  background-color:transparent
  p
    font-family:'Animal-reg';
    font-size: 2.5rem;
    --wght:500;
    --ital:75;
    font-variation-settings: "wght" var(--wght), "ital" var(--ital) ;
    /* font-variation-settings: "wght" 459, "ital" 25 ; */

.has-margin-right
  margin-right:1rem

.has-align-center
  align-items:center

.is-paddingless-bottom
  padding-bottom:0 !important

.is-paddingless-top
  padding-top:0 !important

@media only screen and (max-width: 768px)
  .select.is-fullwidth-mobile
    width:100%
    select
      width:100%
  .is-fullwidth-mobile
    width:100%
  .has-padding-1-top-mobile
    padding-top:1.5rem !important
