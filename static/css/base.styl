//----------------GLOBALS----------------------//
body
  font-family:"sans-serif"
  font-size:1.2em

a
  color: highlightColor
  &:visited
    color: highlightColor
  &.is-disabled
    color:black
    opacity: 0.25
    pointer-events: none

form *
  font-family:"umAnimalStatic"

.label
  font-weight:400

@media only screen and (max-width:768px)
  .column
    padding:1.25rem

//------------------AREAS---------------------//
#font-controls
  background: rgb(255,255,255);
  background: linear-gradient(180deg, rgba(255,255,255,1) 76%, rgba(255,255,255,0) 100%);

#select-style
  option
    text-transform: capitalize

.select:not(.is-multiple):not(.is-loading)::after
  content: '\f0d7'
  font: normal normal normal 17px/1 FontAwesome
  color: black
  height: 0.625em
  width: 0.625em
  display:block
  position: absolute
  right: 11px
  margin-top: -0.6em
  top: 50%
  pointer-events: none
  -webkit-transform-origin: center
  -ms-transform-origin: center
  transform-origin: center
  transform: scale(.75,1.25)
@media screen and (max-width: 768px)
  .select:not(.is-multiple):not(.is-loading)::after
    margin-top: -0.21em

select::-ms-expand
  display: none

.select select
  border-radius:2px
  border-color: #dfdfdf
  min-width:200px
@media screen and (max-width: 768px)
  .select select
    height:2em
    font-size:1.4em

//--- Property Range Sliders ----//
input[type="range"]
  height:1px
  &.input
    &:active
      noBorder()
    &:focus
      noBorder()

.slider
  -webkit-appearance: none
  width: 100%
  height: 15px
  border-radius: 5px
  background: #d3d3d3
  outline: none
  &::-webkit-slider-thumb
    -webkit-appearance: none
    appearance: none
    width: 15px
    height: 15px
    border-radius: 50%
    background: black
    cursor: pointer
  &::-moz-range-thumb
    width: 15px
    height: 15px
    border-radius: 50%
    background: black
    cursor: pointer
@media only screen and (max-width:768px)
  .slider
    &::-webkit-slider-thumb
      width:20px
      height:20px
    &::-moz-range-thumb
      width:20px
      height:20px

//-----VariableToggle----//
switchHeight = 22px
.switch
  position: relative
  display: inline-block
  width: 40px
  height: switchHeight
  input
    opacity: 0
    width: 0
    height: 0
    &:checked + .toggle
      background-color: black
    &:checked + .toggle:before
      -webkit-transform: translateX(switchHeight - 5px)
      -ms-transform: translateX(switchHeight - 5px)
      transform: translateX(switchHeight - 5px)

.toggle
  position: absolute
  cursor: pointer
  top: 0
  left: 0
  right: 0
  bottom: 0
  background-color: #ddd
  -webkit-transition: .4s
  transition: .4s
  &:before
    position: absolute
    content: ""
    height: switchHeight - 2px
    width: switchHeight - 2px
    left: 2px
    top:1px
    background-color: white
    box-shadow:0px 2px 2px rgba(0,0,0,0.6)
    -webkit-transition: .4s
    transition: .4s

.toggle.round
  border-radius: 34px
  &:before
    border-radius: 50%

//--- Editable Text---//
#font-display
  margin-top:288px
@media screen and (min-width:769px)
  #font-display
    margin-top:132px

#text-area
  background-color:transparent
  p
    width:100%
    min-height:200px
    font-size: 2.5rem
    vertical-align: top
    &:focus
      outline:none !important
    &.arethaVariable
      --wght:500
      --ital:50
      font-variation-settings: "wght" var(--wght), "ital" var(--ital)

#font-selection
  position:fixed;
  opacity:0.9
  bottom: 5px
  left: 5px
  background:rgba(100,100,100,0.5)
  border-radius:5px
  ul
    li
      margin:5px
      cursor:pointer

